{
  "name": "webpack-cfg",
  "author": "Adrian C. Miranda",
  "description": "A distribution board for webpack",
  "version": "1.2.8",
  "main": "index.js",
  "homepage": "https://github.com/adriancmiranda/webpack-cfg",
  "readmeFilename": "README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriancmiranda/webpack-cfg.git"
  },
  "bugs": {
    "url": "https://github.com/adriancmiranda/webpack-cfg/issues"
  },
  "xo": {
    "overrides": [
      {
        "files": "index.js",
        "esnext": false
      },
      {
        "files": "lib/**/*.js",
        "esnext": false
      }
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    }
  },
  "scripts": {
    "upgrade": "ncu -a --loglevel verbose --packageFile package.json && npm i",
    "dev": "run-p watch:*",
    "test": "ava test/*.spec.js",
    "watch:test": "npm test -- --watch",
    "lint": "xo index.js tools.js templates.js lib/**/*.js",
    "travis:test": "npm test",
    "appveyor:test": "node --max_old_space_size=4096 \"node_modules\\ava-cli\\cli\" \"test/*.spec.js\"",
    "precommit": "run-s lint test",
    "commitmsg": "validate-commit-msg",
    "release": "npm run build && standard-version"
  },
  "dependencies": {
    "pirate-flag": "^0.1.0",
    "dotcfg": "1.5.14",
    "flatten": "^1.0.2",
    "glob": "^7.1.2",
    "is": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "ava-cli": "^0.0.1",
    "ava-spec": "^1.1.0",
    "conventional-commit-types": "^2.2.0",
    "cross-env": "^5.0.1",
    "husky": "^0.14.3",
    "npm-check-updates": "^2.12.1",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.3",
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.12.2",
    "xo": "^0.18.2"
  },
  "engines": {
    "node": ">=6.10.1"
  },
  "keywords": [
    "webpack",
    "webpack-cfg"
  ]
}
